<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/picktop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/ingmusic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintVertical_weight="0.14">


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/ingmusic"
        app:layout_constraintTop_toBottomOf="@+id/picktop"
        app:layout_constraintBottom_toTopOf="@+id/variation_music"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintVertical_weight="0.14">


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/variation_music"
        app:layout_constraintTop_toBottomOf="@+id/picktop"
        app:layout_constraintBottom_toTopOf="@+id/iconlayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintVertical_weight="0.14">


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/iconlayout"
        app:layout_constraintTop_toBottomOf="@+id/variation_music"
        app:layout_constraintBottom_toTopOf="@+id/collaboration_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintVertical_weight="0.14">


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textStyle="bold"
        android:text="콜라보레이션"
        android:gravity="center"
        android:id="@+id/collaboration_text"
        app:layout_constraintTop_toBottomOf="@+id/iconlayout"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintVertical_weight="0.14">

    </TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/collaborationlist"
        android:background="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/collaboration_text"
        app:layout_constraintBottom_toTopOf="@+id/menu_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintVertical_weight="0.14"
        >
    </androidx.recyclerview.widget.RecyclerView>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/menu_bar"
        android:background="@color/graygreen"
        android:layout_alignParentBottom="true"
        app:layout_constraintTop_toBottomOf="@+id/collaborationlist"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_weight="0.14"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/menu_bar_icon"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/menu_bar_word"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_weight="0.28">


            <ImageButton
                android:id="@+id/homeBtn"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:adjustViewBounds="true"
                android:backgroundTint="@color/graygreen"
                android:contentDescription="홈"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/myInfobtn"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/home_new" />

            <ImageButton
                android:id="@+id/myInfobtn"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:adjustViewBounds="true"
                android:backgroundTint="@color/graygreen"
                android:contentDescription="설정"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintLeft_toRightOf="@+id/homeBtn"
                app:layout_constraintRight_toLeftOf="@+id/addbtn"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/user_new" />

            <ImageButton
                android:id="@+id/addbtn"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:adjustViewBounds="true"
                android:backgroundTint="@color/graygreen"
                android:contentDescription="내 음악 추가하기"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintLeft_toRightOf="@+id/myInfobtn"
                app:layout_constraintRight_toLeftOf="@+id/librarybtn"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/add_new" />

            <ImageButton
                android:id="@+id/librarybtn"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:adjustViewBounds="true"
                android:backgroundTint="@color/graygreen"
                android:contentDescription="라이브러리"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintLeft_toRightOf="@+id/addbtn"
                app:layout_constraintRight_toLeftOf="@+id/setbtn"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/library_new" />

            <ImageButton
                android:id="@+id/setbtn"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:adjustViewBounds="true"
                android:backgroundTint="@color/graygreen"
                android:contentDescription="설정"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintLeft_toRightOf="@+id/librarybtn"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/setting_new" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/menu_bar_word"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/menu_bar_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_weight="0.15"
            >


            <TextView
                android:id="@+id/homeword"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:text="홈"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/myinfoword"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/myinfoword"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="내 정보"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintLeft_toRightOf="@+id/homeword"
                app:layout_constraintRight_toLeftOf="@+id/addword"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/addword"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="추가하기"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintLeft_toRightOf="@+id/myinfoword"
                app:layout_constraintRight_toLeftOf="@+id/libraryword"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/libraryword"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:text="라이브러리"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintLeft_toRightOf="@+id/addword"
                app:layout_constraintRight_toLeftOf="@+id/setword"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/setword"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="20dp"
                android:text="설정"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintLeft_toRightOf="@+id/libraryword"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>