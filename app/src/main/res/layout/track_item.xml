<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/music_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/medicontrol"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:paddingRight="20dp"
        android:paddingBottom="15dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <ToggleButton
            android:id="@+id/mutebtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/mute_togglebutton"
            android:checked="true"
            android:textOff=""
            android:textOn=""
            android:layout_margin="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/folderbtn"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageButton
            android:id="@+id/folderbtn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/folder_open"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/path_text"
            app:layout_constraintLeft_toRightOf="@id/mutebtn"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/btn_color"/>

        <EditText
            android:id="@+id/path_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:text=""
            android:focusable="false"
            android:focusableInTouchMode="false"
            app:layout_constraintLeft_toRightOf="@id/folderbtn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

