<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/gray_sto"/>
            <stroke
                android:color="@color/black"
                android:width="1dp"/>
            <corners
                android:radius="10dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <solid
                android:color="#99A98F"/>
            <stroke
                android:color="@color/gray_sto"
                android:width="-1dp"/>
            <corners
                android:radius="10dp"/>
        </shape>
    </item>

</selector>